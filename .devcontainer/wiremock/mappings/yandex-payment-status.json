{
  "request": {
    "method": "GET",
    "urlPathPattern": "/api/v3/payments/([a-zA-Z0-9-]+)",
    "headers": {
      "Authorization": {
        "matches": "Bearer .*"
      }
    }
  },
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/json"
    },
    "jsonBody": {
      "id": "{{request.pathSegments.[1]}}",
      "status": "succeeded",
      "paid": true,
      "amount": {
        "value": "1000.00",
        "currency": "RUB"
      },
      "confirmation": {
        "type": "redirect",
        "confirmation_url": "https://money.yandex.ru/payments/external/confirmation?orderId={{request.pathSegments.[1]}}"
      },
      "created_at": "{{now format='yyyy-MM-ddTHH:mm:ss.SSSZ'}}",
      "captured_at": "{{now format='yyyy-MM-ddTHH:mm:ss.SSSZ'}}",
      "description": "Test payment",
      "metadata": {
        "order_id": "12345",
        "customer_email": "test@example.com"
      },
      "recipient": {
        "account_id": "{{randomValue length=10 type='NUMERIC'}}",
        "gateway_id": "{{randomValue length=10 type='NUMERIC'}}"
      },
      "refundable": true,
      "test": true
    }
  }
}
