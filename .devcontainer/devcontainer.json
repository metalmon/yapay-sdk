{
  "name": "YAPAY SDK Development Environment",
  "dockerComposeFile": "docker-compose.yml",
  "service": "yapay-sdk-development",
  "workspaceFolder": "/workspace/sdk",
  "shutdownAction": "stopCompose",

  // Configure tool-specific properties
  "customizations": {
    "vscode": {
      "settings": {
        "go.toolsManagement.checkForUpdates": "local",
        "go.useLanguageServer": true,
        "go.gopath": "/go",
        "go.goroot": "/usr/local/go",
        "go.formatTool": "goimports",
        "go.lintTool": "golangci-lint",
        "go.lintFlags": ["--fast"],
        "go.testFlags": ["-v"],
        "go.testTimeout": "30s",
        "go.buildOnSave": "package",
        "go.lintOnSave": "package",
        "go.vetOnSave": "package",
        "go.coverOnSave": "package",
        "go.coverOnSingleTest": true,
        "go.coverOnSingleTestFile": true,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        },
        "files.eol": "\n",
        "files.insertFinalNewline": true,
        "files.trimTrailingWhitespace": true
      },
      "extensions": [
        "golang.Go",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-vscode.vscode-docker",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "ms-vscode.makefile-tools",
        "github.vscode-pull-request-github",
        "ms-vscode.vscode-github-issue-notebooks",
        "ms-vscode.vscode-markdown",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-typescript-next",
        "ms-vscode.vscode-eslint",
        "ms-vscode.vscode-prettier"
      ]
    }
  },

  // Use 'forwardPorts' to make a list of ports inside the container available locally
  "forwardPorts": [8080, 8081, 8083, 2345],

  // Use 'postCreateCommand' to run commands after the container is created
  "postCreateCommand": "echo 'YAPAY SDK Devcontainer created successfully'",

  // Use 'postStartCommand' to run commands after the container starts
  "postStartCommand": "echo 'YAPAY SDK Devcontainer ready for development' && echo 'Terminal: $TERM' && echo 'Go version:' && go version",

  // Configure tool-specific properties
  "remoteUser": "root",
  
  // Set environment variables for proper terminal support
  "containerEnv": {
    "TERM": "xterm-256color",
    "COLORTERM": "truecolor"
  },

  // Use 'updateContentCommand' to run commands after the container is updated
  "updateContentCommand": "echo 'YAPAY SDK Devcontainer updated successfully'"
}